{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Config": "readonly",
    "ErrorHandler": "readonly",
    "APIService": "readonly",
    "Character": "readonly",
    "CollisionSystemV2": "readonly",
    "TouchControls": "readonly",
    "VirtualJoystick": "readonly",
    "GameUI": "readonly",
    "VisualEffects": "readonly",
    "Game": "readonly"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "prefer-const": "error",
    "no-var": "error"
  }
}
